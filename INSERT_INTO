/*proc contents data=mart.t_applications; run;*/

DATA T1;
INPUT NAME $;
CARDS;
A
;
RUN;

DATA T2;
INPUT NAME $;
CARDS;
B
;
RUN;
DATA T3;
INPUT NAME $;
CARDS;
C
;
RUN;

PROC SQL;
DROP TABLE T_COMBINED;
RUN;

/*1*/
PROC SQL;
CREATE TABLE T_COMBINED AS
SELECT * FROM T1;
RUN;


/*PROC SQL;*/
/*CREATE TABLE T_COMBINED AS*/
/*SELECT * FROM T2;*/
/*RUN;*/

/*OPTION1 - REQUIRES DIFFERENT TABLE NAMES*/
PROC SQL;
INSERT INTO T_COMBINED (NAME)
SELECT NAME FROM T2
UNION ALL
SELECT NAME FROM T3
;
RUN;

/*PROC SQL;*/
/*DELETE * FROM T_COMBINED;*/
/*RUN;*/

/*OPTIONS2 - REQUIRES TO BE INSERTED IN EVERY STEP*/
PROC SQL;
INSERT INTO T_COMBINED 
SELECT * FROM T1;
RUN;

PROC SQL;
INSERT INTO T_COMBINED 
SELECT * FROM T2;
RUN;

PROC SQL;
INSERT INTO T_COMBINED 
SELECT * FROM T3;
RUN;
